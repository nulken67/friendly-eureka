unit = input("Введите значение физической величины для измерения градусов (C, F, K): ")

if unit == 'C':
    try:
        temp_c = float(input("Введите температуру в градусах Цельсия: "))
        temp_f = (temp_c * 9/5) + 32
        temp_k = temp_c + 273.15
        print(f"Температура в Фаренгейтах: {temp_f} F")
        print(f"Температура в Кельвинах: {temp_k} K")
    except ValueError:
        print("Ошибка: введено некорректное значение.")
elif unit == 'F':
    try:
        temp_f = float(input("Введите температуру в градусах Фаренгейта: "))
        temp_c = (temp_f - 32) * 5/9
        temp_k = (temp_f - 32) * 5/9 + 273.15
        print(f"Температура в Цельсиях: {temp_c} C")
        print(f"Температура в Кельвинах: {temp_k} K")
    except ValueError:
        print("Ошибка: введено некорректное значение.")
elif unit == 'K':
    try:
        temp_k = float(input("Введите температуру в Кельвинах: "))
        temp_c = temp_k - 273.15
        temp_f = (temp_k - 273.15) * 9/5 + 32
        print(f"Температура в Цельсиях: {temp_c} C")
        print(f"Температура в Фаренгейтах: {temp_f} F")
    except ValueError:
        print("Ошибка: введено некорректное значение.")




